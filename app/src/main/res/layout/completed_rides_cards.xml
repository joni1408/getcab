<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="65dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/cab" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="DD/MM/YYYY"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Date"
        android:layout_marginEnd="111dp"
        android:layout_marginRight="111dp"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:text="HH:mm"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Amount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/From"
        android:layout_alignTop="@+id/Date"
        android:gravity="center_vertical"
        android:layout_alignRight="@+id/From"
        android:paddingBottom="3dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:text="Fare"
        android:textSize="16sp"
        android:paddingTop="3dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="323dp"
        android:layout_height="11dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:paddingBottom="10dp"
        app:srcCompat="@color/black"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/VehicleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Date"
        android:layout_alignStart="@+id/Date"
        android:layout_below="@+id/Date"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="Vehicle Number" />

    <TextView
        android:id="@+id/From"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/To"
        android:layout_marginTop="88dp"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:text="Pickup Location"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/To" />

    <TextView
        android:id="@+id/To"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:layout_toEndOf="@+id/imageView10"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Drop Location"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="57dp"
        android:layout_height="106dp"
        android:layout_alignStart="@+id/imageView5"
        android:layout_below="@+id/VehicleNumber"
        android:layout_alignLeft="@+id/imageView5"
        android:src="@drawable/dot" />
</RelativeLayout>