<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation_drawer.Edit_Account">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="Edit Account"
        app:titleTextColor="@color/green" />

    <ImageView
        android:id="@+id/settingsImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="109dp"
        app:srcCompat="@drawable/userimage" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_marginTop="219dp"
        android:padding="5dp"
        android:text="Name"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/settingsImageView" />

    <EditText
        android:id="@+id/settingsName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settingsImageView"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/customerName" />

    <TextView
        android:id="@+id/Mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settingsImageView"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/settingsName"
        android:padding="5dp"
        android:text="Phone Number"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingsPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settingsImageView"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/Mobile" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/settingsPhone"
        android:padding="5dp"
        android:text="Email"
        android:layout_alignLeft="@+id/settingsImageView"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingsEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settingsImageView"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/Email" />

    <Button
        android:id="@+id/saveEditAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:text="Save Changes"
        android:textColor="@color/green" />

</RelativeLayout>