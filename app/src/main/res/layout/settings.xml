<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation_drawer.settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Account Settings"
        app:titleTextColor="@color/green" />

    <ImageView
        android:id="@+id/settingsImageView"
        android:layout_width="93dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="109dp"
        app:srcCompat="@color/fui_transparent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_marginTop="218dp"
        android:text="Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingsName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_marginBottom="251dp"
        android:text="Phone Number"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingsPhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="-251dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_marginBottom="170dp"
        android:text="Email"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingsEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="-170dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_marginBottom="87dp"
        android:text="Password"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settingsPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingsImageView"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="-87dp" />

</RelativeLayout>