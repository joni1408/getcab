<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation_drawer.settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Account Settings"
        app:titleTextColor="@color/green"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:id="@+id/accouontSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/UserImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="26dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="26dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/UserImage"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Customer Nmae"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Mobile Number"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView2"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="E-mail Id"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/textView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="247dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Favourites"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="226dp"
        app:srcCompat="@color/black"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="234dp"
        app:srcCompat="@drawable/home"
        android:layout_alignLeft="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="173dp"
        app:srcCompat="@drawable/work"
        android:layout_alignLeft="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView7"
        android:layout_marginStart="93dp"
        android:padding="1dp"
        android:text="Home"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="93dp" />

    <TextView
        android:id="@+id/homeLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:padding="1dp"
        android:text="User home location"
        android:layout_alignLeft="@+id/textView8" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/imageView8"
        android:padding="1dp"
        android:text="Work"
        android:layout_alignLeft="@+id/textView8" />

    <TextView
        android:id="@+id/WorkLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignStart="@+id/textView8"
        android:padding="1dp"
        android:text="User workplace location"
        android:layout_alignLeft="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="124dp"
        app:srcCompat="@color/black"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="138dp"
        android:text="More Saved Places"
        android:textColor="@color/blue"
        android:layout_alignLeft="@+id/textView4" />

    <TextView
        android:id="@+id/signoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="70dp"
        android:padding="5dp"
        android:text="Sign Out"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/textView4" />

    <TextView
        android:id="@+id/DeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/signoutTextView"
        android:layout_marginTop="-70dp"
        android:padding="5dp"
        android:text="Delete Your Account"
        android:textColor="@android:color/holo_red_light"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/textView4" />

</RelativeLayout>